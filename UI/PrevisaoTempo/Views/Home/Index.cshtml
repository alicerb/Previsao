@{
    ViewBag.Title = "Previsão do Tempo";
}
@section scripts {

    <script src="~/App/Services/previsaoService.js"></script>
    <script src="~/App/cidadeController.js"></script>

}
<div class="jumbotron">
    <h1>Previsão do Tempo</h1>
    <p class="lead">Cadastre uma cidade e veja como estará o clima com a OpenWeather</p>
    <p><a href="/Home/CadastroCidade" class="btn btn-primary btn-lg">Cadastre Aqui &raquo;</a></p>
</div>
<br />
<div ng-app="PrevisaoApp" ng-controller="cidadeController" ng-init="initCidade()" class="row">
    <div class="container" style="text-align:center;">
        <div class="panel panel-default" style="max-width:1100px;">
            <div class="panel-heading" style="background-color: red; color:white; height: 50px;">
                <div class="pull-left" style="font-size: 20px;">
                    Cidades
                </div>

            </div>

            <table class="table" style="width:100%; overflow-x:scroll; max-height:600px;">
                <thead class="text-bold">
                    <tr class="text-center">
                        <th class="text-center">ID</th>
                        <th class="text-center">Nome</th>
                        <th class="text-center">Previsão</th>
                    </tr>
                </thead>
                <tbody>
                    <tr class="text-center" ng-repeat="x in cidades">
                        <td>{{x.Id }}</td>
                        <td>{{x.Nome}}</td>
                        <td>
                            <button class="btn btn-default" ng-click="redirecionarPrevisao(x.OpenWeatherId);">
                                Ver Previsão
                            </button>
                        </td>
                    </tr>

                </tbody>
            </table>
        </div>
    </div>

</div>